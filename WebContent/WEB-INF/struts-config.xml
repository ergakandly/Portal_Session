<!DOCTYPE struts-config PUBLIC
       "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
       "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<form-beans>
		<form-bean name="PortalForm" type="com.finalproject.portal.form.PortalForm"></form-bean>
	</form-beans>

	<action-mappings>
		<action path="/portal" name="PortalForm"
			type="com.finalproject.portal.handler.PortalAction" scope="request">
<!-- 			<forward name="success" path="/WEB-INF/jsp/Login.jsp"></forward> -->
<!-- 			<forward name="success" path="/WEB-INF/jsp/DashboardUser.jsp"></forward> -->
			<forward name="success" path="/WEB-INF/jsp/DashboardAdmin.jsp"></forward>
		</action>
	</action-mappings>

	<!-- UNTUK VALIDATOR -->
	<message-resources parameter="ApplicationResources" />
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml,
                             /WEB-INF/validator-user.xml" />
	</plug-in>
</struts-config>      